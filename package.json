{
  "name": "darklauncher",
  "version": "0.0.1",
  "description": "Launcher para java By SenyuGamer",
  "main": "index.js",
  "build": {
    "appId": "com.darkbasement.darklauncher",
    "productName": "DarkLauncher",
    "copyright": "Copyright Â© 2024 darkbasement",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!**/.minecraft/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets/"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DarkLauncher"
    }
  },
  "type": "module",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
		"build": "electron-builder --mac --windows --linux"
  },
  "author": "SenyuGamer",
  "license": "ISC",
  "devDependencies": {
    "@electron-forge/cli": "^7.5.0",
    "@electron-forge/maker-deb": "^7.5.0",
    "@electron-forge/maker-rpm": "^7.5.0",
    "@electron-forge/maker-squirrel": "^7.5.0",
    "@electron-forge/maker-zip": "^7.5.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.5.0",
    "@electron-forge/plugin-fuses": "^7.5.0",
    "@electron-forge/publisher-github": "^7.5.0",
    "@electron/fuses": "^1.8.0",
    "electron-builder": "^25.1.7",
    "electron": "^32.1.2"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "minecraft-launcher-core": "^3.18.1",
    "msmc": "^5.0.5",
    "tomate-loaders": "^2.0.2",
    "update-electron-app": "^3.0.0"
  }
}
